{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"]
      },
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx"
    },
    "include": ["src", "tailwind.config.js", "postcss.config.cjs"]
  }